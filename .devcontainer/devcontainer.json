{
  "name": "Servicios Críticos API - Node.js",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/common-utils:1": {}
},

  "forwardPorts": [5001, 5434],

  "postCreateCommand": "npm install && until pg_isready -h db -p 5432 -U ${DATABASE_USER:-postgres}; do echo 'Esperando que la base de datos esté lista...'; sleep 2; done && npm run db:reset",

  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "humao.rest-client",
        "ms-azuretools.vscode-docker",
        "cweijan.vscode-postgresql"
      ]
    }
  },

  "shutdownAction": "stopContainer"
}
